// QuizBlock - –¢–µ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –±–ª–æ–∫ –≤–æ–ø—Ä–æ—Å–æ–≤ (50-300 –≤–æ–ø—Ä–æ—Å–æ–≤)
model QuizBlock {
  id          String   @id @default(cuid())
  title       String   // –ù–∞–∑–≤–∞–Ω–∏–µ –±–ª–æ–∫–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, "–ê–Ω–∞—Ç–æ–º–∏—è: –°–∏—Å—Ç–µ–º–∞ –∫—Ä–æ–≤–æ–æ–±—Ä–∞—â–µ–Ω–∏—è")
  description String?  @db.Text // –û–ø–∏—Å–∞–Ω–∏–µ –±–ª–æ–∫–∞
  subjectId   String   // –°–≤—è–∑—å —Å –ø—Ä–µ–¥–º–µ—Ç–æ–º
  
  // –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ
  questionCount Int    @default(0) // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –≤–æ–ø—Ä–æ—Å–æ–≤ –≤ –±–ª–æ–∫–µ
  difficulty    QuestionDifficulty @default(MEDIUM) // –°–ª–æ–∂–Ω–æ—Å—Ç—å –±–ª–æ–∫–∞
  isActive      Boolean @default(true) // –ê–∫—Ç–∏–≤–µ–Ω –ª–∏ –±–ª–æ–∫
  orderIndex    Int     @default(0) // –ü–æ—Ä—è–¥–æ–∫ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏
  
  // –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
  totalAttempts Int @default(0) // –°–∫–æ–ª—å–∫–æ —Ä–∞–∑ –ø—Ä–æ—Ö–æ–¥–∏–ª–∏
  averageScore  Float @default(0) // –°—Ä–µ–¥–Ω–∏–π –±–∞–ª–ª
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  subject   Subject        @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  questions QuizQuestion[]
  attempts  QuizAttempt[]
  
  @@index([subjectId])
  @@index([isActive])
  @@index([difficulty])
  @@index([orderIndex])
  @@map("quiz_blocks")
}

// QuizQuestion - –í–æ–ø—Ä–æ—Å –¥–ª—è —Ç–µ—Å—Ç–∞
model QuizQuestion {
  id          String   @id @default(cuid())
  blockId     String?  // –ü—Ä–∏–Ω–∞–¥–ª–µ–∂–Ω–æ—Å—Ç—å –∫ –±–ª–æ–∫—É (–º–æ–∂–µ—Ç –±—ã—Ç—å null –¥–ª—è –æ–±—â–µ–≥–æ –±–∞–Ω–∫–∞)
  subjectId   String   // –ü—Ä–µ–¥–º–µ—Ç (–¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ –ø–æ–∏—Å–∫–∞)
  
  // –°–æ–¥–µ—Ä–∂–∞–Ω–∏–µ –≤–æ–ø—Ä–æ—Å–∞
  questionText String @db.Text // –¢–µ–∫—Å—Ç –≤–æ–ø—Ä–æ—Å–∞
  questionImage String? // URL –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è (–µ—Å–ª–∏ –µ—Å—Ç—å)
  explanation  String? @db.Text // –û–±—ä—è—Å–Ω–µ–Ω–∏–µ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–≥–æ –æ—Ç–≤–µ—Ç–∞
  
  // –í–∞—Ä–∏–∞–Ω—Ç—ã –æ—Ç–≤–µ—Ç–∞ (A, B, C, D, E)
  optionA String @db.Text
  optionB String @db.Text
  optionC String @db.Text
  optionD String @db.Text
  optionE String? @db.Text // –ú–æ–∂–µ—Ç –±—ã—Ç—å 4 –∏–ª–∏ 5 –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤
  
  // –ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç
  correctAnswer String // "a", "b", "c", "d", "e" –∏–ª–∏ "a,b,c" –¥–ª—è –º–Ω–æ–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã—Ö
  questionType  QuestionType @default(SINGLE) // SINGLE –∏–ª–∏ MULTIPLE
  
  // –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ
  difficulty QuestionDifficulty @default(MEDIUM)
  isActive   Boolean @default(true)
  tags       String[] // –¢–µ–≥–∏ –¥–ª—è –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ–π —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏–∏
  
  // –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è
  timesShown    Int @default(0) // –°–∫–æ–ª—å–∫–æ —Ä–∞–∑ –ø–æ–∫–∞–∑—ã–≤–∞–ª–∏
  timesCorrect  Int @default(0) // –°–∫–æ–ª—å–∫–æ —Ä–∞–∑ –æ—Ç–≤–µ—Ç–∏–ª–∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ
  timesWrong    Int @default(0) // –°–∫–æ–ª—å–∫–æ —Ä–∞–∑ –æ—Ç–≤–µ—Ç–∏–ª–∏ –Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  block    QuizBlock?   @relation(fields: [blockId], references: [id], onDelete: SetNull)
  subject  Subject      @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  answers  QuizAnswer[]
  
  @@index([blockId])
  @@index([subjectId])
  @@index([isActive])
  @@index([difficulty])
  @@index([correctAnswer])
  @@map("quiz_questions")
}

// QuizAttempt - –ü–æ–ø—ã—Ç–∫–∞ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏—è —Ç–µ—Å—Ç–∞
model QuizAttempt {
  id       String   @id @default(cuid())
  userId   String
