  @@index([userId])
  @@index([mode])
  @@index([blockId])
  @@index([subjectId])
  @@index([isCompleted])
  @@index([startedAt])
  @@index([score])
  @@map("quiz_attempts")
}

// QuizAnswer - –û—Ç–≤–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –Ω–∞ –≤–æ–ø—Ä–æ—Å
model QuizAnswer {
