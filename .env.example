# Database
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/medical_exam_platform?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Email Configuration - Gmail SMTP
# Get App Password: https://myaccount.google.com/apppasswords
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-16-char-app-password"

# Supabase (for file storage)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Supabase Storage Buckets
SUPABASE_STORAGE_BUCKET="materials"
SUPABASE_PROFILES_BUCKET="profiles"

# File Upload Size Limits
MAX_FILE_SIZE=524288000           # 500MB max total
MAX_SUPABASE_FILE_SIZE=104857600  # 100MB - files larger go to external storage

# External Storage - MEGA (Multiple Accounts Support)
# You can add multiple MEGA accounts by using _1, _2, _3 suffixes
# The system will automatically rotate between accounts for load balancing

# Primary MEGA Account
MEGA_EMAIL_1="your-mega-email-1@example.com"
MEGA_PASSWORD_1="your-mega-password-1"
MEGA_FOLDER_NAME_1="sechenov-plus-materials"  # Optional: folder name in MEGA

# Secondary MEGA Account (Optional - add more space)
MEGA_EMAIL_2="your-mega-email-2@example.com"
MEGA_PASSWORD_2="your-mega-password-2"
MEGA_FOLDER_NAME_2="sechenov-plus-materials"  # Optional: folder name in MEGA

# Tertiary MEGA Account (Optional - add even more space)
# MEGA_EMAIL_3="your-mega-email-3@example.com"
# MEGA_PASSWORD_3="your-mega-password-3"
# MEGA_FOLDER_NAME_3="sechenov-plus-materials"

# Legacy single account support (will be used as _1 if no _1 is set)
MEGA_EMAIL="your-mega-email@example.com"
MEGA_PASSWORD="your-mega-password"
MEGA_FOLDER_NAME="sechenov-plus-materials"

# Groq API (for explaining quiz answers) - fast and reliable
GROQ_API_KEY="your-groq-api-key"
